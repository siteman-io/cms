{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx tailwindcss -i resources/css/components.css -o resources/dist/css/components.css --postcss --watch",
        "dev:styles:admin-bar": "npx tailwindcss -i resources/css/admin-bar.css -o resources/dist/css/admin-bar.css --postcss --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "npx tailwindcss -i resources/css/components.css -o resources/dist/css/components.css --postcss --minify",
        "build:styles:admin-bar": "npx tailwindcss -i resources/css/admin-bar.css -o resources/dist/css/admin-bar.css --postcss --minify",
        "build:scripts": "node bin/build.js",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs"
    },
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.10",
        "@tailwindcss/forms": "^0.5.9",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.10",
        "esbuild": "^0.25.0",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.56.1",
        "prettier": "^3.4.2",
        "prettier-plugin-tailwindcss": "^0.6.12",
        "tailwindcss": "^4.1.10",
        "vitepress": "^1.6.3"
    }
}
